<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.home_nav">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mainBlk"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="خانه"
                android:textColor="@color/mainRed"
                android:textSize="@dimen/_24cdp"
                android:padding="@dimen/_8cdp"
                />

        </RelativeLayout>

        <TextClock
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/mainRed"
            android:gravity="center"
            android:textSize="@dimen/_32cdp"
            android:layout_margin="@dimen/_8cdp"
            android:fontFamily="@font/iransansmobile"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/_24cdp"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/creat_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8cdp"
            android:clickable="true"
            android:tint="@color/mainBlk"
            app:backgroundTint="#cccccc"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_icons8_plus"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_trash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8cdp"
            android:clickable="true"
            android:tint="@color/mainBlk"
            app:backgroundTint="#cccccc"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_icons8_trash" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8cdp"
            android:clickable="true"
            app:tint="@color/white"
            app:backgroundTint="@color/mainRed"
            app:fabSize="normal"
            app:srcCompat="@drawable/ic_baseline_add_24" />

    </LinearLayout>



</RelativeLayout>